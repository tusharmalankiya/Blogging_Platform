<%- include('partials/header') %> 
<% blogs.forEach((blog) =>{ %>
<div class="blog_card_container bg-body-secondary">
  <!-- <img class="blog_img" src="/assets/uploads/2afabf68899484447457a720883373a4" alt="BlogImage" /> -->
  <img class="blog_img" src="<%= blog.image %>" alt="BlogImage" />
  <div class="blog">
    <div>
      <div class="blog_details">
        <!-- <p><%= blog.email %></p> -->
        <p class="blog_date"><%= blog.updatedAt.toLocaleString() %></p>
      </div>
      <div>
        <h2 class="blog_title"><%= blog.title %></h2>
        <!-- </div> -->
        <!-- <div> -->
        <p class="blog_description">
          <%= blog.description.substring(0, 200) + '...' %>
        </p>
      </div>
    </div>
    <div class="blog_card_bottom">
      <div class="more">
        <a href="/blogs/<%= blog._id %>">Continue Reading</a>
      </div>
      <div class="author">
        <a href="/blogs/author/<%= blog.author_id %>">
          <%= blog.firstname + ' ' + blog.lastname %></a
        >
      </div>
    </div>
  </div>
</div>

<% }) %> <%- include('partials/footer') %>
